<%- include("../../partials/header.ejs"); %>

<div class="container">
  <div class="row">
    <% laptop_backpacks.forEach(function(laptop_backpack){ %>
      <div class="col-md-6 col-lg-4">
        <div class="card">
          <a href="/laptop-backpack/<%= laptop_backpack._id %>">
            <div class="card-img-wrapper">
              <img src="<%= laptop_backpack.image %>" class="card-img-top">
            </div>
          </a>
          <div class="card-body">
            <a href="/laptop-backpack/<%= laptop_backpack._id %>">
              <h5 class="card-title"><%= laptop_backpack.brand + " " + laptop_backpack.name %></h5>
            </a>
            <p class="card-text"><%= laptop_backpack.dimensions %></p>
            <p class="price float-left">$<%= laptop_backpack.price %></p>
            <a href="/add-to-cart/laptop-backpack/<%= laptop_backpack._id %>" class="btn btn-success btn-sm float-right">Add to Shopping Cart</a>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<%- include("../../partials/footer.ejs"); %>