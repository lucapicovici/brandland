<%- include("../partials/header.ejs"); %>

<div class="container auth-container">
    <div class="row">
        <div class="col-12 auth-elements">
            <h1 id="auth-heading">Login</h1>

            <% if (errMsg.length > 0) { %>
                <div class="alert alert-danger" role="alert" style="max-width: 250px;">
                    <%= errMsg %>
                </div>
            <% } %>

            <form action="/user/login" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="email" placeholder="Email" style="width: 250px;">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="Password" style="width: 250px;">
                </div>
                <div class="button" style="text-align: center;">
                    <button type="submit" class="btn btn-primary btn-sm">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="container auth-container">
    <div class="row">
        <div class="col-12 auth-elements">
            <div id="login-alternative">
                <p>Don't have an account? <a href="/user/register">Register here!</a></p>
            </div>
        </div>
    </div>
</div>


<%- include("../partials/footer.ejs"); %>