<%- include("../partials/header.ejs"); %>

<div class="container" id="checkout-container">
  <div class="row">
    <div class="col-md-12">
      <h1 id="checkout-header">Checkout</h1>
      <h5>Total price: $<%= totalPrice %></h5>
      <div class="alert alert-danger <% if (!errMsg) %> hidden" id="charge-error">
        <%= errMsg %>
      </div>

      <form action="/checkout" method="POST" id="checkout-form">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" name="checkout[name]">
        </div>
        <div class="form-group">
          <label for="address">Address</label>
          <input type="text" class="form-control" id="address" name="checkout[address]">
        </div>
        <div class="form-group">
          <label for="card-name">Card Holder Name</label>
          <input type="text" class="form-control" id="card-name" name="checkout[card-name]">
        </div>
        <div class="form-group">
          <label for="card-number">Credit Card Number</label>
          <input type="text" class="form-control" id="card-number" name="checkout[card-number]">
        </div>
        <div class="row">
          <div class="col-6">
            <div class="form-group">
              <label for="card-expiry-month">Expiration Month</label>
              <input type="text" class="form-control" id="card-expiry-month" name="checkout[card-expiry-month]">
            </div>
          </div>
          <div class="col-6">
            <div class="form-group">
              <label for="card-expiry-year">Expiration Year</label>
              <input type="text" class="form-control" id="card-expiry-year" name="checkout[card-expiry-year]">
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="card-cvc">CVC</label>
          <input type="text" class="form-control" id="card-cvc" name="checkout[card-cvc]" style="width: 100px;">
        </div>
        <button type="submit" class="btn btn-success" style="margin-top: 16px;">Buy Now</button>
      </form>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="/javascript/checkout.js"></script>

<%- include("../partials/footer.ejs"); %>